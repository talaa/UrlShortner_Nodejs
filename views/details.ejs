<html>
  <head>
    <title>Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <h1>Shortened URL Details</h1>
    <h2><%= shortUrl.origUrl %></h2>
    <!-- Create container with two columns -->
    <div class="container">
      <div class="row">
        <!-- First column (2/3 width) -->
        <div class="col-7">
          <!-- Add chart to first column -->
          <canvas id="myChart"></canvas>
        </div>
    
        <!-- Add vertical divider -->
        <div class="d-none d-md-block col-md-1">
          <div class="border-end border-dark h-100"></div>
        </div>
    
        <!-- Second column (1/3 width) -->
        <div class="col-4">
          <!-- Add QR code to second column -->
          <div class="text-center">
            <img src="<%= qrCodeDataUrl %>" alt="QR Code" style="width: 80%;">
            <br>
            <a href="<%= qrCodeDataUrl %>" download="qrcode.png" class="btn btn-primary mt-2">Download QR Code</a>
          </div>
        </div>
      </div>
    </div>
    
    <script>
      const ctx = document.getElementById('myChart');
      const chartData = <%- JSON.stringify(chartData) %>;
      console.log(chartData)
      new Chart(ctx, {
        type: 'bar',
        data:chartData
        ,
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    </script>
    <!-- Add Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
